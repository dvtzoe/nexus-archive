{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@repo/*": [
        "./apps/repo/src/*",
      ],
      "@web/*": [
        "./apps/web/src/*",
      ],
      "@types/*": [
        "./packages/types/src/*",
      ],
      "@types": [
        "./packages/types/src/index.ts",
      ],
      "@ui/*": [
        "./packages/ui/src/*",
      ],
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "rootDir": ".",
    "outDir": "./dist",
  },
  "references": [
    {
      "path": "apps/repo",
    },
    {
      "path": "apps/web",
    },
    {
      "path": "packages/types",
    },
    {
      "path": "packages/ui",
    },
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
  ],
}
