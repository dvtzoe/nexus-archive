generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("REPO_DATABASE_URL")
}

model User {
  id       String    @id @default(cuid(2))
  password String
  accounts Account[]
}

model Account {
  name     String   @id
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  vertices Vertex[]
}

model Vertex {
  owner        String
  ownerAccount Account @relation(fields: [owner], references: [name])
  name         String

  source String

  isEntryPoint Boolean @default(false)

  @@id(name: "slug", [owner, name])
}
