{
  "name": "nexus-archive",
  "version": "0.1.0",
  "description": "A publishing platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:repo": "pnpm -rF @nexus-archive/repository run dev",
    "dev:web": "pnpm -rF @nexus-archive/web run dev",
    "build": "turbo build",
    "lint": "eslint . && turbo lint",
    "lint:fix": "eslint --fix . && turbo lint:fix",
    "format": "prettier --write . && turbo format",
    "format:check": "prettier --check . && turbo format:check",
    "typecheck": "tsc --noEmit && turbo typecheck",
    "ci": "pnpm run build lint typecheck",
    "clean": "turbo clean",
    "start:repo": "pnpm -rF @nexus-archive/repository run start",
    "start:web": "pnpm -rF @nexus-archive/web run start",
    "repo-db:gen": "pnpm -rF @nexus-archive/repo-db exec prisma generate",
    "repo-db:migrate": "pnpm -rF @nexus-archive/repo-db exec prisma migrate dev",
    "repo-db:seed": "pnpm -rF @nexus-archive/repo-db exec prisma db seed"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
