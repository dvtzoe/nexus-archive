{
  "name": "@nexus-archive/repository",
  "type": "module",
  "version": "0.1.0",
  "description": "Repository Server for Nexus Archive",
  "main": "./dist/src/server.js",
  "scripts": {
    "build": "tsc --build",
    "dev": "dotenvx run -- tsx watch ./src/server.ts",
    "start": "dotenvx run -- node ./dist/src/server.js",
    "clean": "rm -rf ./dist"
  },
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@nexus-archive/repo-db": "workspace:*",
    "@nexus-archive/types": "workspace:*",
    "bcrypt": "^5.1.1",
    "fastify": "^5.6.0"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
