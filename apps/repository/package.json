{
  "name": "@nexus-archive/repository",
  "type": "module",
  "version": "0.1.0",
  "description": "Repository Server for Nexus Archive",
  "main": "./dist/src/server.js",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch & nodemon --watch ./dist --exec node ./dist/server.js",
    "start": "node ./dist/src/server.js",
    "clean": "rm -rf ./dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@nexus-archive/repo-db": "workspace:*",
    "@nexus-archive/types": "workspace:*",
    "fastify": "^5.6.0"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
