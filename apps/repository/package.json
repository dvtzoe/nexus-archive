{
  "name": "@nexus-archive/repository",
  "type": "module",
  "version": "0.1.0",
  "description": "Repository Server for Nexus Archive",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & nodemon --watch ./dist --exec node ./dist/server.js",
    "start": "node ./dist/server.js",
    "clean": "rm -rf dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@nexus-archive/types": "workspace:*",
    "fastify": "^5.6.0"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
